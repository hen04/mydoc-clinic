											div
												img(src="images/diploma-1.png" alt="Диплом")

						.tabs-content-item#tab-3
							.review-list-button
								a(class="button button--light js-modal" href="#reviewModal") Оставить отзыв
							.review-list
								each item in reviewList
									.review-list__item
										p= item.text
										p= item.text
										.review-list__footer
											p= item.name
											p= item.date

							include templates/_pagination

