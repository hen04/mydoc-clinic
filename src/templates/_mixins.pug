mixin menu(currentTitle)
	ul
		each item in menu.slice(0,8)
			if item.submenu === false
				if item.url === currentTitle
					li.active
						a(href= item.url)= item.title
				else
					li
						a(href= item.url)= item.title
			else
				if item.url === currentTitle
					li(class="has-submenu active")
						span
							a(href= item.url)= item.title
							img(src="images/chevron-down.svg" alt="")
						ul(class="submenu")
							each subtitle in item.submenu
								li
									a(href= subtitle.url)= subtitle.subtitle
				else
					if item.url === currentTitle
						li(class="has-submenu active")
							span
								a(href= item.url)= item.title
								img(src="images/chevron-down.svg" alt="")
							ul(class="submenu")
								each subtitle in item.submenu
									li
										a(href= subtitle.url)= subtitle.subtitle
					else
						li(class="has-submenu")
							span
								a(href= item.url)= item.title
								img(src="images/chevron-down.svg" alt="")
							ul(class="submenu")
								each subtitle in item.submenu
									li
										a(href= subtitle.url)= subtitle.subtitle
